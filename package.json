{
  "name": "@kihayu/neo-components",
  "version": "0.1.12",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-s type-check build-only build:types",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build:types": "node -e \"require('fs').rmSync('dist/types',{recursive:true,force:true})\" && vue-tsc -p tsconfig.build.json --declaration --emitDeclarationOnly"
  },
  "main": "dist/neo-components.cjs.js",
  "module": "dist/neo-components.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/neo-components.es.js",
      "require": "./dist/neo-components.cjs.js"
    },
    "./neo-components.css": "./dist/neo-components.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "dist/neo-components.css"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kihayu/neo-components.git"
  },
  "homepage": "https://github.com/kihayu/neo-components#readme",
  "bugs": {
    "url": "https://github.com/kihayu/neo-components/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.4",
    "@vueuse/core": "^13.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.4",
    "tw-animate-css": "^1.3.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3",
    "@storybook/addon-a11y": "^8.6.12",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/addon-themes": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/vue3": "^8.6.12",
    "@storybook/vue3-vite": "^8.6.12",
    "@tsconfig/node22": "^22.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/browser": "3.1.2",
    "@vitest/coverage-v8": "3.1.2",
    "@vitest/eslint-plugin": "^1.1.39",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.22.0",
    "eslint-plugin-storybook": "^0.12.0",
    "eslint-plugin-vue": "~10.0.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.0.0",
    "motion-v": "^1.0.0",
    "npm-run-all2": "^7.0.2",
    "playwright": "^1.52.0",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "storybook": "^8.6.12",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vitest": "^3.1.1",
    "vue-tsc": "^2.2.8",
    "vue": "^3.5.13",
    "lucide-vue-next": "^0.511.0",
    "reka-ui": "^2.3.0"
  },
  "peerDependencies": {
    "vue": ">=3.3.0",
    "lucide-vue-next": ">=0.511.0",
    "reka-ui": ">=2.3.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}